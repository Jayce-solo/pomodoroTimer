/* pages/tongji/tongji.wxss */
.sum{
  display: flex;
  flex-wrap: wrap;
  height: 350rpx;
  border-bottom: 10rpx solid #F3F3F3;
}
.sumBox{
  width: 375rpx;
  height: 160rpx;
  text-align: center;
}
.sumBox .title{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #666;
}
.sumBox .value{
  height: 40rpx;
  line-height: 40rpx;
  color: #FF6347;
  font-weight: bold;
}


.detail{
  width: 700rpx;
  margin: 0 auto;
}
.detail_title{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}
.detail_title_text{
  flex: 1;
  font-size: 30rpx;
}
.detail_title_type{
  flex: 1;
  text-align: right;
  font-size: 25rpx;
}
.detail_title_type text{
  padding-left: 10rpx;
}
.active{
  color: #FF6347;
}